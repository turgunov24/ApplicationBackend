{
	"name": "app",
	"version": "1.0.0",
	"main": "index.js",
	"type": "commonjs",
	"scripts": {
		"dev": "nodemon",
		"start": "ts-node src/index.ts",
		"generate": "npx drizzle-kit generate",
		"migrate": "npx drizzle-kit migrate",
		"studio": "npx drizzle-kit studio",
		"seed": "ts-node src/db/seed/index.ts",
		"build": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --external:pg-native --external:bcrypt --external:sharp",
		"build:watch": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --external:pg-native --external:bcrypt --external:sharp --watch",
		"build:clean": "rm -rf dist",
		"start:prod": "node dist/index.js",
		"dev:build": "ts-node-dev --respawn --transpile-only src/index.ts",
		"dev:render": "ts-node-dev --respawn --transpile-only src/index.ts && node dist/index.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.5",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.5.5",
		"@types/pg": "^8.15.4",
		"drizzle-kit": "^0.31.6",
		"drizzle-orm": "^0.44.7",
		"drizzle-seed": "^0.3.1",
		"esbuild": "0.25.9",
		"nodemon": "^3.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.2",
		"express-validator": "^7.2.1",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.2",
		"pg": "^8.16.0",
		"postgres": "^3.4.7",
		"prisma": "^6.3.0",
		"uuid": "^11.1.0",
		"winston": "^3.17.0"
	}
}
